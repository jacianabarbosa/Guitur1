                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meses de maior movimentação:"
                android:layout_below="@+id/radioGroupOrigemVisitantes"/>

            <EditText
                android:id="@+id/editTextMesesMaiorMovimentacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewMesesMaiorMovimentacao"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewIntegraRoteiros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Integra roteiros turísticos comercializados:"
                android:layout_below="@+id/editTextMesesMaiorMovimentacao"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewIntegraRoteiros"
                android:id="@+id/radioGroupRoteiros">

                <RadioButton
                    android:id="@+id/radioButtonSim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/radioButtonNao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Não" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewIntegraRoteirosCitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Citar:"
                android:layout_below="@+id/radioGroupRoteiros"/>

            <EditText
                android:id="@+id/editTextIntegraRoteirosCitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewIntegraRoteirosCitar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewTransportesTipoFrequencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transportes (Tipo e Frequência):"
                android:layout_below="@+id/editTextIntegraRoteirosCitar"/>

            <EditText
                android:id="@+id/editTextTransportesTipoFrequencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewTransportesTipoFrequencia"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
