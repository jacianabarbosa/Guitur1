                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewLocalidadeProxima"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextLocalidadeProxima"
                android:text="Distância:" />

            <EditText
                android:id="@+id/editTextDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewDistancia"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewMeiosDeAcesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextDistancia"
                android:text="Meios de acesso ao atrativo:" />

            <TextView
                android:id="@+id/textViewTransportes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transportes:"
                android:layout_below="@+id/textViewMeiosDeAcesso"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTransportes"
                android:id="@+id/radioGroupTransportes">


                <RadioButton
                    android:id="@+id/radioButtonRodoviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rodoviário" />

                <RadioButton
                    android:id="@+id/radioButtonFerroviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ferroviário" />

                <RadioButton
                    android:id="@+id/radioButtonHidroviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hidroviário" />

                <RadioButton
                    android:id="@+id/radioButtonAereo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aéreo" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewPNP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacidade:"
                android:layout_below="@+id/radioGroupTransportes"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewPNP"
                android:id="@+id/radioGroupPNP">

                <RadioButton
                    android:id="@+id/radioButtonP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privativo" />

                <RadioButton
                    android:id="@+id/radioButtonNP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Não privativo" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewAcessoMaisUtilizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Acesso mais utilizado:"
                android:layout_below="@+id/radioGroupPNP"/>

            <EditText
                android:id="@+id/editTextAcessoMaisUtilizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewAcessoMaisUtilizado"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewDetalhamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Detalhamento:"
                android:layout_below="@+id/editTextAcessoMaisUtilizado"/>

            <EditText
                android:id="@+id/editTextDetalhamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewDetalhamento"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descrição:"
                android:layout_below="@+id/editTextDetalhamento"/>

            <EditText
                android:id="@+id/editTextDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewDescricao"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textViewProtecao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proteção existente:"
                android:layout_below="@+id/editTextDescricao"/>

            <EditText
                android:id="@+id/editTextProtecao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewProtecao"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textViewEstadoConservacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Estado de conservação:"
                android:layout_below="@+id/editTextProtecao"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewEstadoConservacao"
                android:id="@+id/radioGroupEstadoConservacao">

                <RadioButton
                    android:id="@+id/radioButtonBomQualidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bom" />

                <RadioButton
                    android:id="@+id/radioButtonRegularQualidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Regular" />

                <RadioButton
                    android:id="@+id/radioButtonRuimQualidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ruim" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewHorarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Horários de visitação:"
                android:layout_below="@+id/radioGroupEstadoConservacao"/>

            <TextView
                android:id="@+id/textViewIngresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingressos:"
                android:layout_below="@+id/textViewHorarios"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewIngresso"
                android:id="@+id/radioGroupIngresso">

                <RadioButton
                    android:id="@+id/radioButtonPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pago" />

                <RadioButton
                    android:id="@+id/radioButtonGratuito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gratuito" />

                <RadioButton
                    android:id="@+id/radioButtonNaoExiste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
