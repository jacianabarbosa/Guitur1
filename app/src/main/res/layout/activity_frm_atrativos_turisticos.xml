                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroupIngresso"
                android:text="Visita guiada / Idiomas" />

            <CheckBox
                android:id="@+id/checkBoxFolhetos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBoxVisitaGuiada"
                android:text="Folhetos / Guias / Idiomas" />

            <TextView
                android:id="@+id/textViewOrigemVisitantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
