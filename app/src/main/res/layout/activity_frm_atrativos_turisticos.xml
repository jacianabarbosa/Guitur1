                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewLocalProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Local de comercialização do produto:"
                android:layout_below="@+id/editTextTransportesTipoFrequencia"/>

            <EditText
                android:id="@+id/editTextLocalProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewLocalProduto"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewObservacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Observações complementares:"
                android:layout_below="@+id/editTextLocalProduto"/>

            <EditText
                android:id="@+id/editTextObservacoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewObservacoes"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/textViewRemissivas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remissivas e referências:"
                android:layout_below="@+id/editTextObservacoes"/>

            <EditText
                android:id="@+id/editTextRemissivas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_below="@+id/textViewRemissivas"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextRemissivas"
                android:text="Salvar" />

