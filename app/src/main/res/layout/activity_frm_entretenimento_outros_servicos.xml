                android:id="@+id/textViewDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextLocalidadeProxima"
                android:text="Distância em Km:" />

            <EditText
                android:id="@+id/editTextDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewDistancia"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewMeiosAcesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editTextDistancia"
                android:text="Meios de Acesso:" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewMeiosAcesso"
                android:id="@+id/radioGroupTransportesAcesso">

                <RadioButton
                    android:id="@+id/radioButtonRodoviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rodoviário" />

                <RadioButton
                    android:id="@+id/radioButtonFerroviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ferroviário" />

                <RadioButton
                    android:id="@+id/radioButtonHidroviario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hidroviário" />

                <RadioButton
                    android:id="@+id/radioButtonAereo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Aéreo" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewPNP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacidade:"
                android:layout_below="@+id/radioGroupTransportesAcesso"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewPNP"
                android:id="@+id/radioGroupPNP">

                <RadioButton
                    android:id="@+id/radioButtonP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Privativo" />

                <RadioButton
                    android:id="@+id/radioButtonNP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Não privativo" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewTransportesUrbanos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioGroupPNP"
                android:text="Transportes Urbanos que Atendem o Equipamento:" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTransportesUrbanos"
                android:id="@+id/radioGroupTransportes">

                <RadioButton
                    android:id="@+id/radioButtonOnibus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ônibus" />

                <RadioButton
                    android:id="@+id/radioButtonMetro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Metrô"/>

                <RadioButton
                    android:id="@+id/radioButtonTaxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Táxis" />

                <RadioButton
                    android:id="@+id/radioButtonBonde"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bonde" />


                <RadioButton
                    android:id="@+id/radioButtonOutros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Outros" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewLocalizacaoProxima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioGroupTransportes"
                android:text="Localização próxima aos seguintes atrativos:" />

